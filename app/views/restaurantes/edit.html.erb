<%= form_for  @restaurante do |f| %>
  <% if @restaurante.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurante.errors.count, "erros") %>:</h2>

      <ul>
      <% @restaurante.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
	  
    </div>
  <% end %>  
  <legend> Editar Restaurante</legend>
  <label class="control-label">Nome: <%= f.text_field :nome %></label>
  <label class="control-label">Endereco: <%= f.text_field :endereco %></label>
  <label class="control-label">Especialidade: <%= f.text_field :especialidade %></label>
  <%= submit_tag 'Atualizar' %>
	
<% end %>

<%= link_to 'Voltar', action: 'index' %>